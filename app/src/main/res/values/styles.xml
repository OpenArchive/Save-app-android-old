<resources>

    <!-- themes -->
    <style name="Theme.SaveApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_splash_animator</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/SaveAppTheme.NoActionBar</item>
    </style>

    <style name="SaveAppTheme.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>


        <item name="android:textViewStyle">@style/OATextViewStyle</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.SaveApp.18pt</item>

        <item name="textAppearanceBodyLarge">@style/TextAppearance.SaveApp.16pt</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.SaveApp.14pt</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.SaveApp.11pt</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Material3.BodySmall</item>

        <item name="textAppearanceTitleLarge">@style/TextAppearance.App.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.TitleMedium</item>


        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">@bool/dayMode</item>
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/SaveAppBottomSheetTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AlertMaterialDialogTheme</item>
        <item name="preferenceTheme">@style/ThemeOverlay.SaveApp.Preference</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="appBarLayoutStyle">@style/SaveApp.Widget.AppBarStyle</item>
        <item name="toolbarStyle">@style/SaveApp.Widget.MaterialToolbarStyle</item>
        <item name="android:toolbarStyle">@style/SaveApp.Widget.MaterialToolbarStyle</item>


        <!--        Button Styles-->
        <item name="buttonStyle">@style/OAButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="materialIconButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>

        <!--        Button text style -->
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.Button</item>

        <!--        For App Bar Action Menu Text Color-->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!--        Input Layout Style-->
        <item name="textInputStyle">@style/OATextInputLayoutStyle</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SaveApp.SmallComponent
        </item>
        <item name="materialSwitchStyle">@style/Widget.SaveApp.Switch</item>
    </style>

    <style name="SaveAppTheme.NoActionBar.Onboarding" parent="SaveAppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>


    <style name="ThemeOverlay.SaveApp.Preference" parent="PreferenceThemeOverlay">
        <item name="android:listDivider">@drawable/save_list_item_spacing_small</item>
        <item name="android:divider">@drawable/save_list_item_spacing_small</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <!--        <item name="preferenceInformationStyle">@style/SaveApp.Preference.Information</item>-->
        <item name="switchPreferenceCompatStyle">@style/SaveApp.Preference.SwitchPreference</item>
    </style>

    <style name="SaveApp.Preference.Information" parent="@style/Preference.Information">
        <item name="textSize">11sp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SaveApp.Preference.SwitchPreference" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:textSize">12sp</item>
        <item name="android:widgetLayout">@layout/custom_preference_widget_switch</item>
    </style>


    <style name="SaveAppBottomSheetTheme" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="buttonStyle">@style/OAButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <style name="SaveAppFullBottomSheetTheme" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="buttonStyle">@style/OAButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_expandedOffset">0dp</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="App.Custom.BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="buttonStyle">@style/OAButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <style name="AppMaterialDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="buttonStyle">@style/OAButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <!-- widgets / dialogs / alerts -->

    <style name="SaveApp.Widget.AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <style name="SaveApp.Widget.MaterialToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_ios</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.SaveApp.Toolbar</item>
    </style>

    <style name="ThemeOverlay.SaveApp.Toolbar" parent="">
        <!-- Tint the menu and overflow icons -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="OABottomBarButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:text">@string/action_settings</item>
        <item name="android:textColor">@color/tabBarMenuButton</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="icon">@drawable/ic_settings</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">5dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@color/tabBarMenuButton</item>
    </style>

    <style name="Widget.SaveApp.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SaveApp.Switch</item>
    </style>

    <style name="ThemeOverlay.SaveApp.Switch" parent="">
        <item name="colorPrimary">@color/colorTertiary</item>
        <item name="colorSurfaceVariant">@color/red</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/colorNavigationDrawerBackground</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertMaterialDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorTertiary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="OATextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorLink">@color/colorTertiary</item>
    </style>

    <!-- 16pt (16sp) text style -->
    <style name="TextAppearance.SaveApp.16pt" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontWeight">600</item> <!-- SemiBold -->
    </style>

    <!-- 18pt (18sp) text style -->
    <style name="TextAppearance.SaveApp.18pt" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:fontWeight">600</item> <!-- SemiBold -->
    </style>

    <!-- 14pt (14sp) text style -->
    <style name="TextAppearance.SaveApp.14pt" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontWeight">500</item> <!-- Medium -->
    </style>

    <!-- 11pt (11sp) text style -->
    <style name="TextAppearance.SaveApp.11pt" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">14sp</item>
        <item name="android:fontWeight">500</item> <!-- Medium -->
    </style>

    <!-- 14pt Link Style -->
    <style name="TextAppearance.SaveApp.14ptLink" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontWeight">500</item> <!-- Medium -->
        <item name="android:textColor">@color/colorTertiary</item>
    </style>

    <!-- 11pt Italic Style -->
    <style name="TextAppearance.SaveApp.11ptItalic" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/montserrat_italic</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">14sp</item>
        <item name="android:fontStyle">italic</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/colorTertiary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorContainer">@color/colorTertiary</item>
        <item name="elevation">6dp</item>
        <item name="tint">@color/white</item>
        <item name="android:stateListAnimator">@animator/custom_fab_animator</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.FloatingActionButton
        </item>
    </style>


    <style name="ShapeAppearanceOverlay.App.FloatingActionButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="OAMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorOnContainer">@color/colorTertiary</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/colorTertiary</item>
        <item name="colorOnContainer">@color/colorOnPrimary</item>
    </style>

    <style name="ShapeAppearance.App.Button" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="OAMaterialSignInButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="OAButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OATextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/c23_teal</item>
        <item name="boxBackgroundColor">@color/colorButtonOnBackground</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="hintTextColor">@color/c23_teal</item>
        <item name="cursorColor">@color/c23_teal</item>
        <item name="hintEnabled">false</item>
        <item name="placeholderTextAppearance">@style/ItalicPlaceholderTextAppearance</item>
        <item name="editTextStyle">@style/ItalicPlaceholderEditTextStyle</item>
    </style>


    <style name="ItalicPlaceholderEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/ItalicPlaceholderTextAppearance</item>
    </style>

    <style name="ItalicPlaceholderTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.SaveApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SaveApp.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/inputBackground</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>

    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="colorOnSurface">@color/colorText</item>-->
        <item name="colorError">@color/colorError</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.SaveApp.11pt</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.FilledBox</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:fontWeight">500</item>
    </style>


    <style name="ShapeAppearance.SaveApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="BreadcrumbButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontStyle">normal</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="BreadcrumbChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/colorBackground</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ThinProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:thickness">2dp</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim</item>
        <item name="android:windowExitAnimation">@anim/popdown_anim</item>
    </style>
</resources>
