<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true">

    <include
        android:id="@+id/common_app_bar"
        layout="@layout/common_app_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/media_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bt_add_more_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_app_bar" />

    <LinearLayout
        android:layout_marginVertical="24dp"
        android:id="@+id/bt_add_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:drawableTint="@color/colorOnBackground"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_weight="2.5"
            android:id="@+id/bt_add_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_more"
            app:icon="@drawable/baseline_add_24"
            app:iconTint="@color/colorOnBackground"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_marginVertical="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_batch_edit"
            style="?android:attr/buttonBarButtonStyle"
            app:iconTint="@color/colorTertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@drawable/ic_batchedit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_select_all"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/colorTertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_all" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_remove"
            style="?android:attr/buttonBarButtonStyle"
            app:iconTint="@color/colorTertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconGravity="end"
            app:icon="@drawable/ic_delete" />

    </LinearLayout>

    <include
        android:id="@+id/add_menu"
        layout="@layout/content_picker_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
