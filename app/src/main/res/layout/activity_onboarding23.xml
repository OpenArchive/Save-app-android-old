<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_block"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:weightSum="63">

        <include
            android:id="@+id/title_block"
            layout="@layout/block_onboarding23_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:importantForAccessibility="no"
            android:src="@drawable/onboarding23_app_hand" />

        <LinearLayout
            android:id="@+id/get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_started"
                android:textColor="@color/colorText"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textFontWeight="600"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/onboarding23_arrow_right"
                app:tint="@color/colorText" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>